<div class="row">
  <div class="col-xs-12">
    <div class="box">
      <div class="box-header">
        <h3 class="box-title">
          All available <%= controller_name %>
        </h3>

        <span>
            <%= link_to 'New Teacher', new_teacher_path, class: 'btn btn-primary pull-right' %>
        </span>
      </div>
      <!-- /.box-header -->
      <div class="box-body">
        <table id="example2" class="table table-bordered table-hover">
          <thead>
          <tr>
            <th>First name</th>
            <th>Middle name</th>
            <th>Last name</th>
            <th>Phone</th>
            <th>Email</th>
            <th>Designation</th>
            <th>Qualification</th>
            <th colspan="3"></th>
          </tr>
          </thead>
          <tbody>
          <% @teachers.each do |teacher| %>
            <tr>
              <td><%= teacher.first_name %></td>
              <td><%= teacher.middle_name %></td>
              <td><%= teacher.last_name %></td>
              <td><%= teacher.phone %></td>
              <td><%= teacher.email %></td>
              <td><%= teacher.designation %></td>
              <td><%= teacher.qualification %></td>
              <td>
                <div class="btn-group">
                  <%= link_to teacher, class: 'btn btn-info ' do %>
                    <i class="fa fa-eye"></i>
                  <% end %>
                  <%= link_to edit_teacher_path(teacher), class: 'btn btn-default' do %>
                    <i class="fa fa-pencil"></i>
                  <% end %>
                  <%= link_to teacher, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' do %>
                    <i class="fa fa-trash"></i>
                  <% end %>
                </div>
              </td>
            </tr>
          <% end %>
          </tbody>
          <tfoot>
          <tr>
            <th>First name</th>
            <th>Middle name</th>
            <th>Last name</th>
            <th>Phone</th>
            <th>Email</th>
            <th>Designation</th>
            <th>Qualification</th>
            <th colspan="3"></th>
          </tr>
          </tfoot>
        </table>
      </div>
      <!-- /.box-body -->
    </div>
  </div>
</div>
