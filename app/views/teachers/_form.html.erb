<%= form_with(model: teacher, local: true, class: 'form-horizontal') do |form| %>
  <div class="box-body">
    <% if teacher.errors.any? %>
      <div id="error_explanation" class="callout callout-danger">
        <h3><%= pluralize(teacher.errors.count, "error") %> prohibited this teacher from being saved:</h3>

        <ul class="list-group">
        <% teacher.errors.full_messages.each do |message| %>
          <li class="list-group-item list-group-item-danger"><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= form.label :first_name, class: 'col-sm-2' %>
      <div class="col-sm-10">
        <%= form.text_field :first_name, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <%= form.label :middle_name, class: 'col-sm-2' %>
      <div class="col-sm-10">
        <%= form.text_field :middle_name, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <%= form.label :last_name, class: 'col-sm-2' %>
      <div class="col-sm-10">
        <%= form.text_field :last_name, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <%= form.label :phone, class: 'col-sm-2' %>
      <div class="col-sm-10">
        <%= form.text_field :phone, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <%= form.label :email, class: 'col-sm-2' %>
      <div class="col-sm-10">
        <%= form.text_field :email, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <%= form.label :designation, class: 'col-sm-2' %>
      <div class="col-sm-10">
        <%= form.text_field :designation, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <%= form.label :qualification, class: 'col-sm-2' %>
      <div class="col-sm-10">
        <%= form.text_field :qualification, class: 'form-control' %>
      </div>
    </div>
  </div>
  <div class="box-footer">
      <div class="actions">
        <%= form.submit nil, class: 'btn btn-primary pull-right' %>
        <%= link_to 'Back', teachers_path, class: 'btn btn-default' %>
      </div>
  </div>
<% end %>
