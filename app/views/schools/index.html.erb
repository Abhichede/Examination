<p id="notice"><%= notice %></p>
<div class="row">
  <div class="col-xs-12">
    <div class="box">
      <div class="box-header">
        <h3 class="box-title">All available schools</h3>
      </div>
      <!-- /.box-header -->
      <div class="box-body">
        <table id="example2" class="table table-bordered table-hover">
          <thead>
          <tr>
            <th>Name</th>
            <th>Address</th>
            <th>Email</th>
            <th>Phone</th>
            <th colspan="3"></th>
          </tr>
          </thead>
          <tbody>
            <% @schools.each do |school| %>
              <tr>
                <td><%= school.name %></td>
                <td><%= school.address %></td>
                <td><%= school.email %></td>
                <td><%= school.phone %></td>
                <td>
                  <div class="btn-group">
                    <%= link_to school, class: 'btn btn-info ' do %>
                      <i class="fa fa-eye"></i>
                    <% end %>
                    <%= link_to edit_school_path(school), class: 'btn btn-default' do %>
                      <i class="fa fa-pencil"></i>
                    <% end %>
                    <%= link_to school, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' do %>
                      <i class="fa fa-trash"></i>
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
          <tfoot>
          <tr>
            <th>Name</th>
            <th>Address</th>
            <th>Email</th>
            <th>Phone</th>
            <th colspan="3"></th>
          </tr>
          </tfoot>
        </table>
      </div>
      <!-- /.box-body -->
    </div>
  </div>
</div>