<%= form_with(model: question, local: true, class: 'form-horizontal') do |form| %>
  <div class="box-body">
    <% if question.errors.any? %>
      <div id="error_explanation" class="callout callout-danger">
        <h3><%= pluralize(question.errors.count, "error") %> prohibited this question from being saved:</h3>

        <ul class="list-group">
        <% question.errors.full_messages.each do |message| %>
          <li class="list-group-item list-group-item-danger"><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= form.label :course_id, class: 'col-sm-2' %>
      <div class="col-sm-10">
        <%= form.text_field :course_id, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <%= form.label :batch_id, class: 'col-sm-2' %>
      <div class="col-sm-10">
        <%= form.text_field :batch_id, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <%= form.label :subject_id, class: 'col-sm-2' %>
      <div class="col-sm-10">
        <%= form.text_field :subject_id, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <%= form.label :school_id, class: 'col-sm-2' %>
      <div class="col-sm-10">
        <%= form.text_field :school_id, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <%= form.label :teacher_id, class: 'col-sm-2' %>
      <div class="col-sm-10">
        <%= form.text_field :teacher_id, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <%= form.label :question, class: 'col-sm-2' %>
      <div class="col-sm-10">
        <%= form.text_area :question, class: 'form-control', rows: 5 %>
      </div>
    </div>

    <div class="form-group">
      <%= form.label :answer, class: 'col-sm-2' %>
      <div class="col-sm-10">
        <%= form.text_area :answer, class: 'form-control', rows: 5 %>
      </div>
    </div>

    <div class="form-group">
      <%= form.label :marks, class: 'col-sm-2' %>
      <div class="col-sm-10">
        <%= form.text_field :marks, class: 'form-control' %>
      </div>
    </div>
  </div>
  <div class="box-footer">
    <div class="actions">
      <%= form.submit nil, class: 'btn btn-primary pull-right' %>
      <%= link_to 'Back', questions_path, class: 'btn btn-default' %>
    </div>
  </div>
<% end %>
