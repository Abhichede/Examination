<div class="row">
  <div class="col-xs-12">
    <div class="box">
      <div class="box-header">
        <h3 class="box-title">
          All available <%= controller_name %>
        </h3>

        <span>
            <%= link_to 'New Question', new_question_path, class: 'btn btn-primary pull-right' %>
        </span>
      </div>
      <!-- /.box-header -->
      <div class="box-body">
        <table id="example2" class="table table-bordered table-hover">
          <thead>
          <tr>
            <th>Course</th>
            <th>Batch</th>
            <th>Subject</th>
            <th>School</th>
            <th>Teacher</th>
            <th>Question</th>
            <th>Answer</th>
            <th>Marks</th>
            <th colspan="3"></th>
          </tr>
          </thead>
          <tbody>
          <% @questions.each do |question| %>
            <tr>
              <td><%= question.course_id %></td>
              <td><%= question.batch_id %></td>
              <td><%= question.subject_id %></td>
              <td><%= question.school_id %></td>
              <td><%= question.teacher_id %></td>
              <td><%= question.question %></td>
              <td><%= question.answer %></td>
              <td><%= question.marks %></td>
              <td>
                <div class="btn-group">
                  <%= link_to question, class: 'btn btn-info ' do %>
                    <i class="fa fa-eye"></i>
                  <% end %>
                  <%= link_to edit_question_path(question), class: 'btn btn-default' do %>
                    <i class="fa fa-pencil"></i>
                  <% end %>
                  <%= link_to question, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' do %>
                    <i class="fa fa-trash"></i>
                  <% end %>
                </div>
              </td>
            </tr>
          <% end %>
          </tbody>
          <tfoot>
          <tr>
            <th>Course</th>
            <th>Batch</th>
            <th>Subject</th>
            <th>School</th>
            <th>Teacher</th>
            <th>Question</th>
            <th>Answer</th>
            <th>Marks</th>
            <th colspan="3"></th>
          </tr>
          </tfoot>
        </table>
      </div>
      <!-- /.box-body -->
    </div>
  </div>
</div>
