<%= form_with(model: course, local: true, class: 'form-horizontal') do |form| %>
  <div class="box-body">
    <% if course.errors.any? %>
      <div id="error_explanation" class="callout callout-danger">
        <h3><%= pluralize(course.errors.count, "error") %> prohibited this course from being saved:</h3>

        <ul class="list-group">
        <% course.errors.full_messages.each do |message| %>
          <li class="list-group-item list-group-item-danger"><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= form.label :name, class: 'col-sm-2' %>
      <div class="col-sm-10">
        <%= form.text_field :name, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <%= form.label :code, class: 'col-sm-2' %>
      <div class="col-sm-10">
        <%= form.text_field :code, class: 'form-control' %>
      </div>
    </div>
  </div>
  <div class="box-footer">
    <div class="actions">
      <%= form.submit nil, class: 'btn btn-primary pull-right' %>
      <%= link_to 'Back', courses_path, class: 'btn btn-default' %>
    </div>
  </div>
<% end %>
