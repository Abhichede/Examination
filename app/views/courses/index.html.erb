<div class="row">
  <div class="col-xs-12">
    <div class="box">
      <div class="box-header">
        <h3 class="box-title">
          All available <%= controller_name %>
        </h3>

        <span>
            <%= link_to 'New Course', new_course_path, class: 'btn btn-primary pull-right' %>
        </span>
      </div>
      <!-- /.box-header -->
      <div class="box-body">
        <table id="example2" class="table table-bordered table-hover">
          <thead>
          <tr>
            <th>Name</th>
            <th>Code</th>
            <th colspan="3"></th>
          </tr>
          </thead>
          <tbody>
          <% @courses.each do |course| %>
            <tr>
              <td><%= course.name %></td>
              <td><%= course.code %></td>
              <td>
                <div class="btn-group">
                  <%= link_to course, class: 'btn btn-info ' do %>
                    <i class="fa fa-eye"></i>
                  <% end %>
                  <%= link_to edit_course_path(course), class: 'btn btn-default' do %>
                    <i class="fa fa-pencil"></i>
                  <% end %>
                  <%= link_to course, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' do %>
                    <i class="fa fa-trash"></i>
                  <% end %>
                </div>
              </td>
            </tr>
          <% end %>
          </tbody>
          <tfoot>
          <tr>
            <th>Name</th>
            <th>Code</th>
            <th colspan="3"></th>
          </tr>
          </tfoot>
        </table>
      </div>
      <!-- /.box-body -->
    </div>
  </div>
</div>
